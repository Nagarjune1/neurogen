<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.wozniaktomek.layout.control.EditorControl">
   <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox alignment="CENTER_LEFT">
         <HBox fx:id="titleContainer">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Edytor danych dwuwymiarowych">
               <HBox.margin>
                  <Insets right="6.0" />
               </HBox.margin>
            </Text>
         </HBox>
         <Button fx:id="buttonHelp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="42.0" prefWidth="42.0" text="?" />
      </HBox>
      <HBox spacing="10.0">
         <HBox fx:id="chartContainer" />
         <VBox prefHeight="200.0" prefWidth="100.0" spacing="12.0">
            <HBox.margin>
               <Insets top="12.0"/>
            </HBox.margin>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefWidth="282.0" styleClass="widget-primary">
               <HBox styleClass="widget-primary-header">
                  <padding>
                     <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                  </padding>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="widget-primary-title-small"
                        text="Klasa obiektów"/>
               </HBox>
               <VBox spacing="8.0">
                  <padding>
                     <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                  </padding>
                  <HBox alignment="TOP_CENTER" spacing="12.0">
                     <RadioButton fx:id="dataClassRadioButton1" mnemonicParsing="false" selected="true"
                                  text="1">
                        <toggleGroup>
                           <ToggleGroup fx:id="dataClassToggleGroup"/>
                        </toggleGroup>
                     </RadioButton>
                     <RadioButton fx:id="dataClassRadioButton2" mnemonicParsing="false" text="2"
                                  toggleGroup="$dataClassToggleGroup"/>
                     <RadioButton fx:id="dataClassRadioButton3" mnemonicParsing="false" text="3"
                                  toggleGroup="$dataClassToggleGroup"/>
                     <RadioButton fx:id="dataClassRadioButton4" mnemonicParsing="false" text="4"
                                  toggleGroup="$dataClassToggleGroup"/>
                     <RadioButton fx:id="dataClassRadioButton5" mnemonicParsing="false" text="5"
                                  toggleGroup="$dataClassToggleGroup"/>
                  </HBox>
               </VBox>
            </VBox>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefWidth="282.0" styleClass="widget-primary">
               <HBox styleClass="widget-primary-header">
                  <padding>
                     <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                  </padding>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="widget-primary-title-small"
                        text="Akcje"/>
               </HBox>
               <VBox spacing="8.0">
                  <padding>
                     <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                  </padding>
                  <HBox spacing="12.0">
                     <Button fx:id="buttonGenerate" mnemonicParsing="false" text="Wygeneruj"/>
                     <Button fx:id="buttonShuffle" mnemonicParsing="false" text="Wymieszaj"/>
                     <Button fx:id="buttonClear" mnemonicParsing="false" text="Wyczyść"/>
                  </HBox>
                  <HBox prefWidth="200.0" spacing="12.0">
                     <Button fx:id="buttonSave" mnemonicParsing="false" prefWidth="200.0"
                             text="Zapisz do pliku"/>
                     <Button fx:id="buttonRead" mnemonicParsing="false" prefWidth="200.0"
                             text="Wczytaj z pliku"/>
                  </HBox>
               </VBox>
            </VBox>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefWidth="282.0" styleClass="widget-primary">
               <HBox styleClass="widget-primary-header">
                  <padding>
                     <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                  </padding>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="widget-primary-title-small"
                        text="Podsumowanie"/>
               </HBox>
               <TextFlow fx:id="textSummary">
                  <padding>
                     <Insets bottom="12.0" left="24.0" right="24.0" top="6.0"/>
                  </padding>
               </TextFlow>
            </VBox>
         </VBox>
      </HBox>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="26.0" />
      </padding>
   </VBox>
</AnchorPane>
